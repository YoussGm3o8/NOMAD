<?xml version="1.0" encoding="utf-8"?>
<!--
  NOMAD Mission Planner Plugin Project
  Target: Mission Planner 1.3.x / .NET Framework 4.7.2
  
  Build Instructions:
  1. Open in Visual Studio 2022
  2. Build > Build Solution (Ctrl+Shift+B)
  3. Copy bin\Release\NOMADPlugin.dll to Mission Planner plugins folder
-->
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{A1B2C3D4-E5F6-7890-ABCD-EF1234567890}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AssemblyName>NOMADPlugin</AssemblyName>
    <RootNamespace>NOMAD.MissionPlanner</RootNamespace>
    <TargetFrameworkVersion>v4.8</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <LangVersion>latest</LangVersion>
    <Deterministic>true</Deterministic>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  
  <ItemGroup>
    <!-- .NET Framework References -->
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Xml" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Mission Planner References -->
    <Reference Include="MissionPlanner">
      <HintPath>C:\Program Files (x86)\Mission Planner\MissionPlanner.exe</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="MissionPlanner.ArduPilot">
      <HintPath>C:\Program Files (x86)\Mission Planner\MissionPlanner.ArduPilot.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="MissionPlanner.Comms">
      <HintPath>C:\Program Files (x86)\Mission Planner\MissionPlanner.Comms.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="MissionPlanner.Controls">
      <HintPath>C:\Program Files (x86)\Mission Planner\MissionPlanner.Controls.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="MissionPlanner.Utilities">
      <HintPath>C:\Program Files (x86)\Mission Planner\MissionPlanner.Utilities.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="Interfaces">
      <HintPath>C:\Program Files (x86)\Mission Planner\Interfaces.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="MAVLink">
      <HintPath>C:\Program Files (x86)\Mission Planner\MAVLink.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <!-- Newtonsoft.Json -->
    <Reference Include="Newtonsoft.Json">
      <HintPath>C:\Program Files (x86)\Mission Planner\Newtonsoft.Json.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <!-- Source Files -->
    <Compile Include="DualLinkSender.cs" />
    <Compile Include="JetsonHealthTab.cs" />
    <Compile Include="NOMADConfig.cs" />
    <Compile Include="NOMADControlPanel.cs" />
    <Compile Include="NOMADPlugin.cs" />
    <Compile Include="NOMADSettingsForm.cs" />
    <Compile Include="NOMADFullPage.cs" />
    <Compile Include="EmbeddedVideoPlayer.cs" />
    <Compile Include="JetsonTerminalControl.cs" />
    <Compile Include="EnhancedHealthDashboard.cs" />
    <Compile Include="TelemetryInjector.cs" />
    <Compile Include="WASDNudgeControl.cs" />
  </ItemGroup>

  <!-- Optional local references for LibVLCSharp managed assemblies (place DLLs in third_party/libvlc) -->
  <ItemGroup>
    <Reference Include="LibVLCSharp.WinForms" Condition="Exists('..\third_party\libvlc\LibVLCSharp.WinForms.dll')">
      <HintPath>..\third_party\libvlc\LibVLCSharp.WinForms.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="LibVLCSharp.Shared" Condition="Exists('..\third_party\libvlc\LibVLCSharp.Shared.dll')">
      <HintPath>..\third_party\libvlc\LibVLCSharp.Shared.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>
  
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
